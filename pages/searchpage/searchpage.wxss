page{
  background-color: #f1f1f1;
  width: 100%;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
}

.search-widget{
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: left;
  /* margin-bottom: 20px; */
  /* padding-left: 1rem; */
  height: 44px;
  background-color: #fff;
  padding-bottom: 10px;
  box-shadow: 0 5px 20px #e7e7e7;
  position: fixed;
  top: 0;
  width: 100%;
  /* width: 100%; */
  overflow-x: hidden;

  /* line-height-step: 44px; */
}

.search-wrapper{
  /* border: 1px solid #000; */
  /* background-color: #fff; */
  height: 32px;
  margin: auto 0;
  margin-left: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  padding-left: 0.2rem;
  border-radius: 16px;
  background-color: #f2f2f2;
  flex: 3
}

.search-wrapper > input{
  margin-left: 0.2rem;
  flex: 1;
  font-size: 0.9rem;
  color: #666;
  letter-spacing: 2rpx;
}

.navBar{
  width: 100vw;
  position:fixed; top:0;
  background-color:#fff;
  box-shadow: 0 -5px 20px #f1f1f1;
}

.search-blog-hover{
  background-color: none;
}

.icon-search{
  margin: auto 5px;
  color: #666;
}

.sear-btn{
  flex: 1;
  /* border: 1px solid red; */
  text-align: center;
  line-height: 44px;
  letter-spacing: 3px;
  color: #0052d9;
  font-weight: bolder;
  font-size: 1rem;
}

.recom-widget{
  margin-top: 23px;
  padding-bottom: 20px;
  background-color: #fff;
  /* padding: 5px; */
  width: 100vw;

}

.recom-detail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.recom-cates{
  margin-top: 10px;
  /* padding: 10px; */
  padding-top: 0;
}

.code-cls{
  width: 100%;
  /* height: 100px; */
  /* border: 1px solid #0052d9; */
  /* border-radius: 5px; */
  /* margin: 0 auto; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.recom-item{
  padding: 4px 8px;
  /* border: 1px solid  */
  color: #666;
  font-size: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #f1f1f1;
  margin: 2px 5px;
  border-radius: 4px;
  background-color: #f5f5f5;
}


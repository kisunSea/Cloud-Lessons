<view class="page">

        <block wx:for="{{msgs}}" wx:for-item="msg" wx:key="index">

        <!-- {
        'msg_title': '中期考试',
        'lesson_name': '英语报刊三班',
        'pub_user': 'kisun',
        'pub_time': '2019-11-01 13:20:01',
        'msg_content': '通过学校商议，决定于2020-01-30 18:20举行中期考试',
        }, -->

        <view class="weui-form-preview msg-item">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">标题</view>
                    <view class="weui-form-preview__value_in-hd">{{msg.msg_title}}</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">班级</view>
                    <view class="weui-form-preview__value">{{msg.lesson_name}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">时间</view>
                    <view class="weui-form-preview__value">{{msg.pub_time}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">内容</view>
                    <view class="weui-form-preview__value">{{msg.msg_content}}</view>
                </view>
            </view>
        </view>

        </block>

</view>